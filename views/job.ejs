<%- include("partials/header") %>

<h2><%= job ? "Edit Job" : "Add Job" %></h2>
<form method="POST" action="<%= job ? '/jobs/update/' + job._id : '/jobs' %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <label>Company: <input type="text" name="company" value="<%= job?.company || '' %>" required></label><br>
  <label>Position: <input type="text" name="position" value="<%= job?.position || '' %>" required></label><br>
  <label>Status:
    <select name="status">
      <option value="pending" <%= job?.status === 'pending' ? 'selected' : '' %>>Pending</option>
      <option value="interview" <%= job?.status === 'interview' ? 'selected' : '' %>>Interview</option>
      <option value="declined" <%= job?.status === 'declined' ? 'selected' : '' %>>Declined</option>
    </select>
  </label><br>
  <button type="submit"><%= job ? "Update Job" : "Create Job" %></button>
</form>

<%- include("partials/footer") %>
